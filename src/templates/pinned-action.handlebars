{{#each devices}}
  <div class="row action pure-g">
    
    <div class="switches pure-u-1-6 pure-u-md-1-12"><b class="mute">eye</b>&nbsp;<b class="pin">pushpin</b></div>
    
    <div class="name pure-u-5-6 pure-u-md-1-4"><span class="server-name">{{server}} &gt; </span> <br/>
      <span class="device-name">{{name}}</span><span class="stream-name"> #{{stream.name}}</span></div>
    
    <div class="pure-u-1-6 hide-md">&nbsp;</div>
    
    <div class="vis pure-u-5-6 pure-u-md-2-3">
        <form class="action pure-form">
          <input type="text" placeholder="message" class=""/>
          <button class="pure-button">action</button>
        </form>
    </div>
  
</div>
{{/each}}

