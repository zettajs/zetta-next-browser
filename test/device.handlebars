{{#each devices}}
<section class="device">
  <div class="row main pure-u-1 pure-g">
    <div class="pure-u-1-12"></div>
    <div class="name pure-u-1-4">{{name}}</div>
  </div>
  
  {{#each streams}}
  <div class="row stream pure-g">
    <div class="switches pure-u-1-12"><b class="mute">eye</b> <b class="pin">pushpin</b></div>
    <div class="name pure-u-1-4">: {{name}}</div>
    <div class="vis pure-u-1-3">
      <div class="sparkline">sparkline</div>
    </div>
    <div class="value pure-u-1-3"> {{value}}</div>
  </div>
  {{/each}}
  
  {{#each actions}}
  <div class="row action pure-g">
    <div class="switches pure-u-1-12"><b class="mute">eye</b> <b class="pin">pushpin</b></div>
    <div class="name pure-u-1-4">#{{name}}</div>
    <div class="vis pure-u-2-3">
      <div class="action"><button>action</button> <button>action</button></div>
    </div>
  </div>
  {{/each}}
</section>
{{/each}}
